#!/usr/bin/env ruby

$stdout.sync = true
$stderr.sync = true
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'multi_buildpack_stager'

build_dir = ARGV[0]
cache_dir = ARGV[1]
buildpack_dir = File.join(File.dirname(__FILE__), '..')

version = File.read(File.join(buildpack_dir, 'VERSION')).strip
puts "-----> Buildpack version #{version}"

stager = MultiBuildpackStager.new(build_dir, cache_dir)
stager.run!
