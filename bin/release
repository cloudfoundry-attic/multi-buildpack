#!/usr/bin/env ruby

require 'yaml'

staging_info_files = Dir['/tmp/contents*/staging_info.yml']

latest_staging_info_file = staging_info_files.max { |a,b| File.ctime(a) <=> File.ctime(b) }

STDERR.puts "-----> Reading staging info from #{latest_staging_info_file}"

staging_info_yaml = YAML.load_file(latest_staging_info_file)

release_metadata = {}
release_metadata['default_process_types'] = {
  'web' => staging_info_yaml['start_command']
}

puts release_metadata.to_yaml
